<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/btn_add_item"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/roulette_name"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Roulette Name"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/more_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_more_vert_24"
        android:contentDescription="more vert"/>
</LinearLayout>
