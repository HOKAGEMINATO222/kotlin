<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NotesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#ff5252</item>
        <item name="colorPrimaryVariant">#ff5252</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#009688</item>

        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.NotesApp" parent="Base.Theme.NotesApp" />
    <style name="ProgressBar">
        <item name="colorSecondary">#F21717</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Model</item>
    </style>

    <style name="Model" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/delete_sheet</item>
    </style>


</resources>